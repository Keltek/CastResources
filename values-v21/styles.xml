<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CastActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/action_bar_red</item>
        <item name="android:titleTextStyle">@style/CastActionBarTitleText</item>
    </style>

    <style name="CastAlertDialogTheme" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="CastActionBarTitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>