<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CastTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarStyle">@style/CastActionBar</item>
        <item name="largeIconTheme">@style/CastTheme.LargeIcon</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_drawer</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="listHeaderTextColor">@android:color/black</item>
        <item name="android:icon">@drawable/ic_action_home</item>
        <item name="icon">@drawable/ic_action_home</item>
        <item name="showcaseViewStyle">@style/ShowcaseView.Light</item>
    </style>

    <style name="CastDarkTheme" parent="AppDarkTheme">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarStyle">@style/CastActionBar</item>
        <item name="largeIconTheme">@style/CastTheme.LargeIcon</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_drawer</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="listHeaderTextColor">@android:color/black</item>
        <item name="android:icon">@drawable/ic_action_home</item>
        <item name="icon">@drawable/ic_action_home</item>
        <item name="showcaseViewStyle">@style/ShowcaseView.Light</item>
    </style>

    <style name="CastActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_red</item>
        <item name="android:titleTextStyle">@style/CastActionBarTitleText</item>
    </style>

    <style name="CastActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CastAlertDialogTheme" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="CastTheme.LargeIcon">
        <item name="iconSize">@android:dimen/app_icon_size</item>
    </style>

    <style name="Separator">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ffcccccc</item>
    </style>

    <style name="ShowcaseView.Light">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail.Light</item>
        <item name="sv_backgroundColor">#c01d3c1c</item>
        <item name="sv_buttonText">@string/ok</item>
        <item name="sv_showcaseColor">#FF1d3c1c</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="VideoTitle" parent="android:style/TextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemTitle" parent="android:style/TextAppearance.Large">
    </style>
</resources>